<Trainer>:
    id: trainer
    display: entry
    orientation: 'vertical'
    Label:
        text: trainer.text
    SolutionInput:
        id: entry
        on_text_validate: trainer.check(); self.focus=True
        on_text: trainer.smart_check()
    Button:
        text: "Enter"
        on_press: trainer.check()

<TAPopup>:
    title:"Wrong"
    Button:
        text: "Try again"
        on_release: root.dismiss()
<ValueErrorPopUp>
    title:"Wrong"
    Button:
        text: "not a number"
        on_release: root.dismiss()

<SolutionInput>:
	multiline: False
    focus: True